@model VidlyCore.ViewModel.CustomerFormViewModel
@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Customers" asp-action="Save" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                
                <div asp-validation-summary="None" class="alert alert-warning">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    Please fix the errors below.
                </div>

                <div class="form-group">
                    <label asp-for="Customer.Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Customer.Name" class="form-control" />
                        <span asp-validation-for="Customer.Name" class="text-danger help-block"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Customer.MembershipTypeId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">

                        <select asp-for="Customer.MembershipTypeId"
                                asp-items="@(new SelectList(Model.MembershipTypes, "Id", "Name"))" class="form-control">
                            <option>Select Membership Type</option>
                        </select>
                        <span asp-validation-for="Customer.MembershipTypeId" asp-validat class="text-danger help-block"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Customer.Birthdate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Customer.Birthdate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                        <span asp-validation-for="Customer.Birthdate" class="text-danger help-block"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label asp-for="Customer.IsSubscribedToNewsletter">
                                <input asp-for="Customer.IsSubscribedToNewsletter" />
                                @Html.DisplayNameFor(m => m.Customer.IsSubscribedToNewsletter)
                            </label>
                        </div>
                    </div>
                </div>

                <input asp-for="Customer.Id" />

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Save Customer</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
