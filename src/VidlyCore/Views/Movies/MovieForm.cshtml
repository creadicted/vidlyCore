@model VidlyCore.ViewModel.MovieFormViewModel
@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Movies" asp-action="Save" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Movie.Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Movie.Name" class="form-control" />
                        <span asp-validation-for="Movie.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.ReleaseDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Movie.ReleaseDate" asp-format="{0:d MMM yyyy}" class="form-control" />
                        <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.DateAdded" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input disabled="disabled" asp-for="Movie.DateAdded" asp-format="{0:d MMM yyyy}" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.Genre" class="col-md-2 control-label"></label>
                    <div class="col-md-10">

                        <select asp-for="Movie.GenreId"
                                asp-items="@(new SelectList(Model.Genres, "Id", "Name"))" class="form-control">
                            <option>Select Genre</option>
                        </select>
                        <span asp-validation-for="Movie.GenreId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.NumberInStock" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Movie.NumberInStock" class="form-control" />
                        <span asp-validation-for="Movie.NumberInStock" class="text-danger"></span>
                    </div>
                </div>

                @Html.HiddenFor(m=>m.Movie.Id)
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Save Customer</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
